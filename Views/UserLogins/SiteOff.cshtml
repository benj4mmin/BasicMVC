@model BasicMVC.Models.Userlogin
@{
    ViewBag.Title = "SiteOff";
}

<h2>SiteOff</h2>

@Styles.Render("~/Content/css")
<!DOCTYPE html>
<head runat="server">
    <script>

        //$("SiteOpenMsg").Click(function () {
        //    $(".dynamicMessage");
        //});

        //$("SiteClosedMsg").Click(function () {
        //    $(".dynamicMessage");
        //});
    </script>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div>

        </div>
        <table>
            <tr>
                <th class="pull-right" style="margin-top:6%;">
                    <img src="~/Content/Images/pgbbanner.jpg" width="600" height="300" style="margin-left:5%; float: right;" class="float-right" />
                </th>
                <th class="pull-left">
                    <div class="form-horizontal">
                        <h4 class="dynamicMessage">Ticket Ordering Period has ended</h4>
                        <h4 class="dynamicMessage">Accounts have been disabled</h4>

                        @*<h2>Login</h2>*@

                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.UserId, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-5" style="margin-left:5%;">
                                @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-5" style="margin-left:5%;">
                                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <p style="color: red;">@ViewBag.ErrorMessage</p>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Login" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </th>
            </tr>
        </table>
    }


    <div>
        @Html.ActionLink("Edit Data", "Edit", "UserTicketForms", new { area = "" }, new { @class = "hideTicketForm" })
    </div>
</body>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/css")
}
</html>