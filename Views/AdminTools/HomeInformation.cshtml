@model BasicMVC.Models.Userlogin

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>

<script type="text/javascript">

    function EditHome()
    {

        var link = '@Html.Raw(@Url.Action("EditHome","AdminTools", new { HomeInformationID = "1"}))';

        window.location.href = link;

    }

</script>

<html>

<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div>

        </div>
        <table>
            <tr>
                <th class="pull-right" style="margin-top:6%;">
                    <img src="~/Content/Images/banner.jpg" width="600" height="300" style="margin-left:5%; float: right;" />
                </th>
                <th class="pull-left">
                    <div class="form-horizontal">
                        @if (ViewBag.HomeList != null)
                        {
                            foreach (var item in ViewBag.HomeList)
                            {

                                <span style="white-space:pre-line">@item.Message</span>

                            }
                        }

                        @*<h2>Login</h2>*@

                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.UserId, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-5" style="margin-left:5%;">
                                @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @readonly = "readonly" } })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-5" })
                            <div class="col-md-5" style="margin-left:5%;">
                                @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @readonly = "readonly" } })
                            </div>
                        </div>
                        <p style="color: red;">@ViewBag.ErrorMessage</p>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Login" class="btn btn-outline-secondary" disabled/>
                            </div>
                        </div>
                    </div>
                </th>
            </tr>
        </table>
    }
    <p style="margin-top:30px">

        <input type="button" value="Edit" onclick="EditHome()" id="editButton" class="btn btn-outline-secondary" />

    <p style="margin-top:30px">

        @Html.ActionLink("Go Back", "Index", "AdminTools", new { area = "" }, new { @class = "btn btn-outline-secondary" })

    </p>

</body>

</html>
