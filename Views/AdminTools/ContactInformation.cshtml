@model BasicMVC.Models.ContactInformation

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>

<script type="text/javascript">

    function AddEditContact()
    {

        var link = '@Html.Raw(@Url.Action("AddEditContact","AdminTools", new { ContactInformationID = "1"}))';

        window.location.href = link;

    }

</script>


<body>

    <div>

        <h2 style="margin-top: 10px">Contact</h2>

    </div>

    <div>

        @if (ViewBag.ContactList != null)
        {

            foreach (var item in ViewBag.ContactList)
            {

                <address style="display: inline-block;">

                    <p>@item.Message</p>

                    <br />

                    <abbr title="Phone"><strong>Phone</strong>:@item.Phone</abbr>

                    <br />

                    <strong>Support:</strong><a href="@item.Email">@item.Email</a><br />

                </address>

                <br />
                <br />

                <h4>
                    <a href="@item.ticketLink<" target="_blank" class="extraTickets">

                        @item.ticketLinkMessage

                    </a>

                    <br />

                    @item.ticketInstructions

                </h4>
            }

        }

    </div>

    <p style="margin-top:30px">

        <input type="button" value="Edit" onclick="AddEditContact()" id="editButton" class="btn btn-outline-secondary" />
    </p>

    <p style="margin-top:30px">

        @Html.ActionLink("Go Back", "Index", "AdminTools", new { area = "" }, new { @class = "btn btn-outline-secondary" })

    </p>

</body>


